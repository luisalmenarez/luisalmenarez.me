---
import '@fontsource-variable/onest';
import '@/styles/global.css';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import Aside from '@/components/Aside.astro';
import type { Locale } from '@/i18n';

interface Props {
  title: string;
  lang: Locale;
}

const { title, lang } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script is:inline>
      (function () {
        const stored = localStorage.getItem('theme');
        if (
          stored === 'dark' ||
          (!stored && window.matchMedia('(prefers-color-scheme: dark)').matches)
        ) {
          document.documentElement.classList.add('dark');
        } else {
          document.documentElement.classList.remove('dark');
        }
      })();
    </script>
    <script>
      import { inject } from '@vercel/analytics';
      inject();
    </script>
  </head>
  <body
    class="relative flex flex-col xl:flex-row justify-center items-start max-w-7xl mx-auto gap-x-14 px-12 py-20 bg-white dark:bg-[#0a0a0f] text-gray-900 dark:text-gray-100 transition-colors duration-300"
  >
    <div
      class="bg-[#ede8ff]/60 dark:bg-[#1d1f31] absolute top-[-6rem] -z-10 right-[11rem] h-[31.25rem] w-[31.25rem] rounded-full blur-[10rem] sm:w-[68.75rem]"
    >
    </div>
    <div
      class="bg-[#e4e8ff]/50 dark:bg-[#181c26] absolute top-[-1rem] -z-10 left-[-35rem] h-[31.25rem] w-[50rem] rounded-full blur-[10rem] sm:w-[68.75rem] md:left-[-33rem] lg:left-[-28rem] xl:left-[-15rem] 2xl:left-[-5rem]"
    >
    </div>
    <Header lang={lang} />
    <Aside lang={lang} />
    <slot />
    <!-- <Footer lang={lang} /> -->
  </body>
</html>

<style is:global>
  :root {
    color-scheme: light;
  }

  .dark {
    color-scheme: dark;
  }

  html {
    font-family: 'Onest variable', system-ui, sans-serif;
    scroll-behavior: smooth;
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
</style>
