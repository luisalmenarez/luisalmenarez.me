---
import ArrowOutward from './icons/ArrowOutward.astro';
import ArrowDown from './icons/ArrowDown.astro';
import { EXPERIENCE } from '@/data/experience';
import { useTranslations } from '@/i18n';
import type { Locale } from '@/i18n';

interface Props {
  lang: Locale;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const experiences = EXPERIENCE[lang];
---

<div class="flex flex-col gap-8">
  {
    experiences.map((experience) => (
      <div class="group relative grid pb-1 sm:grid-cols-12 sm:gap-8 md:gap-6">
        <header class="relative mt-1 text-sm font-semibold sm:col-span-2 text-pretty">
          <time datetime={experience.date}>
            {experience.date.split(' - ')[0]}
          </time>{' '}
          - <time>{experience.date.split(' - ')[1]}</time>
        </header>
        <div class="relative flex flex-col pb-6 before:-ml-6 text-base sm:col-span-10 before:w-px before:absolute before:bg-indigo-200 dark:before:bg-indigo-500/40 before:h-full before:mt-2">
          <div class="absolute size-[10px] bg-indigo-400 dark:bg-indigo-500 rounded-full mt-2 -translate-x-[1.80rem] ring ring-gray-300 dark:ring-gray-800" />
          <h3>
            <div class="inline-flex items-center text-xl text-balance leading-tight">
              <span>
                {experience.title}
                <a
                  class="group/more text-indigo-600 dark:text-indigo-400 font-bold inline-flex items-center gap-1"
                  href={experience.companyUrl}
                  title={`${t('experience.view')} ${experience.company}`}
                  target="_blank"
                >
                  {experience.company}
                  <span class="group-hover/more:translate-x-0.5 group-hover/more:-translate-y-0.5 duration-200 ease-out">
                    <ArrowOutward class="size-6" />
                  </span>
                </a>
              </span>
            </div>
          </h3>
          <div class="text-md text-gray-500 font-bold italic">
            {experience.location}
          </div>
          <div class="mt-4 flex flex-col gap-4 text-sm">
            <div class="flex flex-col gap-1">
              <h4 class="text-lg font-semibold">{t('experience.summary')}</h4>
              <ul class="text-gray-600 dark:text-gray-400 [&>li]:ml-6 text-xs flex list-disc flex-col gap-2 marker:text-indigo-400 marker:text-xl">
                <li class="text-gray-700 dark:text-gray-200">
                  {experience.summary}
                </li>
              </ul>
            </div>

            <details class="exp-details group/details">
              <summary
                class="group/more w-fit cursor-pointer items-center justify-center gap-1.5 underline text-gray-600 dark:text-gray-400 transition-colors duration-300 hover:text-black dark:hover:text-white flex list-none [&::-webkit-details-marker]:hidden"
              >
                <span class="exp-toggle-text text-xs text-gray-500 dark:text-gray-400 underline italic">
                  {t('experience.showMore')}
                </span>
                <ArrowDown class="text-gray-500 dark:text-gray-400 size-6 transition-transform duration-300 group-open/details:rotate-180" />
              </summary>
              <div class="flex flex-col gap-4 mt-4 animate-fade-in">
                <div class="flex flex-col gap-1">
                  <h4 class="text-lg font-semibold">
                    {t('experience.responsibilities')}
                  </h4>
                  <ul class="text-gray-600 dark:text-gray-400 [&>li]:ml-6 text-xs flex list-disc flex-col gap-2 marker:text-indigo-400 marker:text-xl">
                    {experience.responsibilities.map((resp) => (
                      <li class="text-gray-700 dark:text-gray-300">{resp}</li>
                    ))}
                  </ul>
                </div>
                <div class="flex flex-col gap-1">
                  <h4 class="text-lg font-semibold">
                    {t('experience.achievements')}
                  </h4>
                  <ul class="text-gray-600 dark:text-gray-400 [&>li]:ml-6 text-xs flex list-disc flex-col gap-2 marker:text-indigo-400 marker:text-xl">
                    {experience.achievements.map((achievement) => (
                      <li class="text-gray-700 dark:text-gray-300">
                        {achievement}
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
            </details>

            <ul
              class="flex flex-wrap gap-2 italic"
              aria-label="Technologies used"
            >
              {experience.technologies.map((tech) => (
                <li class="text-indigo-600 dark:text-indigo-400 flex gap-1 items-center border border-indigo-200 dark:border-indigo-500/30 rounded-md px-2 py-1 text-xs">
                  <span>{tech}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    ))
  }
</div>

<script>
  document.querySelectorAll('.exp-details').forEach((details) => {
    const toggleText = details.querySelector('.exp-toggle-text');
    if (!toggleText) return;
    const showMore = toggleText.textContent?.trim() || '';
    const showLess = details.closest('[data-show-less]')?.getAttribute('data-show-less') ||
      (showMore === 'Mostrar mÃ¡s' ? 'Mostrar menos' : 'Show less');

    details.addEventListener('toggle', () => {
      toggleText.textContent = (details as HTMLDetailsElement).open ? showLess : showMore;
    });
  });
</script>
