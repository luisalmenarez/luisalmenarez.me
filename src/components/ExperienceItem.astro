---
interface Props {
  title: string;
  date: string;
  description: string;
  link?: string;
}

const { title, date, description, link } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-blue-300 rounded-full mt-1.5 -start-1.5 border border-blue-900"
>
</div>
<time class="mb-1 text-sm font-normal leading-none text-blue-200">{date}</time>
<h3 class="mt-2 text-lg italic font-bold text-blue-400">
  {title}
</h3>
<p class="text-pretty mb-6 text-base font-normal text-gray-400">
  {description}
</p>

{
  link && (
    <a
      href={link}
      class="hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-blue-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700 inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg"
    >
      Saber m√°s...{' '}
      <svg
        class="ms-2 rtl:rotate-180 w-3 h-3"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"
        />
      </svg>
    </a>
  )
}
